<Window x:Class="WPF_Notes.View.CreateNotebookWindow"
        x:Name="CreateNotebooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Notes.View"
        xmlns:vm="clr-namespace:WPF_Notes.ViewModel"
        mc:Ignorable="d"
        Title="CreateNotebookWindow" Height="200" Width="400"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <vm:CreateNotebookVM x:Key="vm"/>
    </Window.Resources>

    <Border BorderThickness="1" 
            BorderBrush="LightGray" 
            CornerRadius="20" 
            Background="GhostWhite">
        <Grid DataContext="{StaticResource vm}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>
            <Label Content="Create Notebook"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   FontSize="15"/>
            <Button Background="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="2"
                    Margin="0,0,10,0"
                    Command="{Binding CloseWindowCommand}"
                    CommandParameter="{Binding ElementName=CreateNotebooksWindow}">
                <Image Source="../Assets/close_symbol.png" Width="20" Height="20"/>
            </Button>
            <StackPanel Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Grid.RowSpan="2"
                        Margin="5">
                <Label Content="Name:"
                       Margin="5,0,0,0"
                       HorizontalAlignment="Left"/>
                <TextBox Margin="10,0,0,0"
                         Text="{Binding NotebookName}"/>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Grid.Column="2"
                        Grid.RowSpan="2"
                        VerticalAlignment="Top"
                        Margin="5">
                <Label Content="Hex Color:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
                <TextBox Margin="5,0,10,0"
                         Text="{Binding NotebookColor}"/>
            </StackPanel>
            <Button Content="OK" 
                    Width="100"
                    Grid.Row="3"
                    Background="LightBlue"
                    BorderThickness="0"
                    Command="{Binding CreateNewNotebookCommand}"
                    CommandParameter="{Binding ElementName=CreateNotebooksWindow}"/>
            <Button Content="Cancel"
                    IsCancel="True"
                    Width="100"
                    Background="LightGray"
                    BorderThickness="0"
                    Grid.Row="3"
                    Grid.Column="2"/>
        </Grid>
    </Border>
</Window>
